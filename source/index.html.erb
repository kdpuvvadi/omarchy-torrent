---
layout: layout
---

<% latest_release = releases.find { |r| r["latest"] } %>
<section class="hero">
  <div class="container">
    <div class="hero-title">
      <h1><a href="/"><%= site_config["title"] %></a></h1>
      <p class="subtitle">Torrent distribution for Omarchy. <%= site_config["description"] %></p>
    </div>
    <% if latest_release %>
      <div class="hero-latest">
        <div class="latest-badge">Latest Release</div>
        <h2 class="latest-version">
          <a href="/releases/v<%= latest_release["version"] %>/">Version v<%= latest_release["version"] %></a>
        </h2>
        <p class="latest-description"><%= latest_release["notes"] %></p>
        
        <div class="latest-details">
          <div class="detail-item">
            <span class="detail-label">Filename:</span>
            <span class="detail-value"><%= latest_release["filename"] %></span>
          </div>
          <div class="detail-item">
            <span class="detail-label">Size:</span>
            <span class="detail-value"><%= format_size(latest_release["size"]) %></span>
          </div>
          <div class="detail-item">
            <span class="detail-label">Released:</span>
            <span class="detail-value"><%= format_date(latest_release["release_date"]) %></span>
          </div>
        </div>

        <div class="latest-actions">
          <% if latest_release["torrent_file"] %>
            <a href="<%= latest_release["torrent_file"] %>" class="btn btn-primary btn-large" download>
              Torrennt Download
            </a>
          <% end %>
          
          <% if latest_release["magnet_link"] %>
            <a href="<%= latest_release["magnet_link"] %>" class="btn btn-secondary btn-large">
              <svg class="magnet-icon" width="24" height="24" viewBox="0 0 70 70" fill="currentColor">
                <path d="M28.034,67.583c0,0-0.001,0-0.002,0c-6.566,0-12.757-2.835-17.432-7.509l-0.263-0.392c-9.815-9.814-9.815-25.845-0.003-35.655l15.58-15.613c0.375-0.375,0.884-0.602,1.414-0.602l0,0c0.53,0,1.039,0.203,1.414,0.578l11.473,11.47c0.781,0.781,0.781,2.045,0,2.827L26.899,36.001c-0.887,0.887-1.362,2.095-1.339,3.405c0.022,1.303,0.556,2.57,1.462,3.477c0.93,0.93,2.229,1.462,3.563,1.462c1.276,0,2.455-0.476,3.319-1.339l13.315-13.317c0.75-0.75,2.078-0.75,2.828,0l11.474,11.474c0.375,0.375,0.586,0.884,0.586,1.414s-0.211,1.039-0.586,1.414l-15.58,15.838C41.109,64.662,34.749,67.583,28.034,67.583z"/>
              </svg>
              Magnet
            </a>
          <% end %>
          
          <% if latest_release["release_url"] %>
            <a href="<%= latest_release["release_url"] %>" class="btn btn-tertiary btn-large" target="_blank">
              Release Notes
            </a>
          <% end %>
        </div>

        <div class="latest-hash">
          <details>
            <summary>SHA256 Checksum</summary>
            <code class="hash"><%= latest_release["sha256"] %></code>
          </details>
        </div>
      </div>
    <% end %>
  </div>
</section>

<section class="releases">
  <div class="container">
    <h2>Releases</h2>
    
    <div class="releases-grid">
      <% releases.each do |release| %>
        <div class="release-card">
          <div class="release-header">
            <h3>
              <a href="/releases/v<%= release["version"] %>/">Version v<%= release["version"] %></a>
            </h3>
              <% if release["latest"] %>
              <div class="release-latest">
                <span class="latest-tag">Latest</span>
              </div>
          <% end %>
          </div>

          <div class="release-info">
            <p class="release-date">Released On: <%= format_date(release["release_date"]) %></p>
            <p class="filename">File Name: <strong><%= release["filename"] %></strong></p>
            <p class="size">Size: <%= format_size(release["size"]) %></p>
            <p class="notes"><%= release["notes"] %></p>
            
          </div>
          

          <div class="release-hash">
            <details>
              <summary>SHA256 Checksum</summary>
              <code class="hash"><%= release["sha256"] %></code>
            </details>
          </div>

          <div class="release-actions">
            <% if release["torrent_file"] %>
              <a href="<%= release["torrent_file"] %>" class="btn btn-primary" download>
                Torrent
              </a>
            <% end %>
            
            <% if release["magnet_link"] %>
              <a href="<%= release["magnet_link"] %>" class="btn btn-secondary">
                <svg class="magnet-icon" width="24" height="24" viewBox="0 0 70 70" fill="currentColor">
                  <path d="M28.034,67.583c0,0-0.001,0-0.002,0c-6.566,0-12.757-2.835-17.432-7.509l-0.263-0.392c-9.815-9.814-9.815-25.845-0.003-35.655l15.58-15.613c0.375-0.375,0.884-0.602,1.414-0.602l0,0c0.53,0,1.039,0.203,1.414,0.578l11.473,11.47c0.781,0.781,0.781,2.045,0,2.827L26.899,36.001c-0.887,0.887-1.362,2.095-1.339,3.405c0.022,1.303,0.556,2.57,1.462,3.477c0.93,0.93,2.229,1.462,3.563,1.462c1.276,0,2.455-0.476,3.319-1.339l13.315-13.317c0.75-0.75,2.078-0.75,2.828,0l11.474,11.474c0.375,0.375,0.586,0.884,0.586,1.414s-0.211,1.039-0.586,1.414l-15.58,15.838C41.109,64.662,34.749,67.583,28.034,67.583z"/>
                </svg>
                Magnet
              </a>
            <% end %>
            
            <% if release["release_url"] %>
              <a href="<%= release["release_url"] %>" class="btn btn-tertiary" target="_blank">
                Release Notes
              </a>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
